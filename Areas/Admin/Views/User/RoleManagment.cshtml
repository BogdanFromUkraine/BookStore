@model RoleManagmentVM

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient mt-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-primary">Manage User Role</h2>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input asp-for="ApplicationUser.Name" readonly type="text" class="form-control border-0 shadow"/>
					<label asp-for="ApplicationUser.Name" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select">

					</select>
				</div>
				@{
					var companyVisible = "display:none";
				}
				@if(Model.ApplicationUser.Role == SD.Role_Company)
				{
					companyVisible = "display:block";	
				}
				<div class="form-floating py-2 col-12">
					<select asp-for="ApplicationUser.CompanyId" style="@companyVisible" asp-items="@Model.CompanyList" class="form-select">
					</select>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control" id="toastrSuccess">Update Role</button>
					</div>
					<div class="col-6 col-md-3">
						<a  asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
					</div>
				</div>


			</div>
		</form>
	</div>
</div>


@section Scripts {
	<script>
		$(document).ready(function () {
			$('#Input_Role').change(function () {
				var selection = $('#ApplicationUser_Role Option:Selected').text();
				if (selection == ('Company')
						{
					$('#ApplicationUser_CompanyId').show();
				}
				else {
					$('#ApplicationUser_CompanyId').hide();
				}
			})
		})
	</script>
  
}

